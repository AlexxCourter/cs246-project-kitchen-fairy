<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/editScreenContainer"
    android:layout_height="match_parent"
    tools:context=".EditScreen">

<RelativeLayout
android:id="@+id/relativeLayout2"
android:layout_width="match_parent"
android:layout_height="80dp"
android:background="@color/secondary"
>

<ImageView
    android:id="@+id/homeBtnEdit"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_centerVertical="true"
    android:layout_marginLeft="8dp"
    android:src="@drawable/ic_baseline_home_24"></ImageView>

<TextView
    android:id="@+id/closeBtnEdit"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="8dp"
    android:textSize="24dp"
    android:textColor="@color/txtbackground"
    android:text="EDIT"
    android:textAlignment="center"></TextView>
</RelativeLayout>

    <ListView
        android:id="@+id/lvListEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:textColor="@color/txtprimary" />

</FrameLayout>
